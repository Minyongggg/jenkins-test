{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "target": "ES6",
    "lib": ["es6"],
    "declaration": true,
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": ["src/**/*", "src/**/*.json"]
}

